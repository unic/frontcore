{
  "name": "frontcore-vue",
  "version": "0.0.1",
  "description": "Vue App on Express webpack-dev-middleware",
  "license": "MIT",
  "author": "Ben Sonley <lbsonley@gmail.com>",
  "keywords": [
    "express",
    "vue",
    "webpack",
    "tailwindcss",
    "frontend prototyping"
  ],
  "dependencies": {
    "axios": "^0.21.1",
    "tailwindcss": "^2.0.2",
    "vue": "^2.6.12",
    "vue-router": "^3.5.1",
    "vue-server-renderer": "^2.6.12",
    "vuex": "^3.6.2",
    "vuex-router-sync": "^5.0.0",
    "webpack-node-externals": "^2.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.12.10",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.10.2",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "autoprefixer": "^10.1.0",
    "babel-loader": "^8.1.0",
    "core-js": "^3.8.3",
    "css-loader": "^5.0.1",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-unicorn": "^20.1.0",
    "eslint-plugin-vue": "^7.5.0",
    "express": "^4.17.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.1",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^4.1.0",
    "prettier": "^2.2.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^4.1.0",
    "vue-loader": "^15.9.6",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^4",
    "webpack-cli": "^4.4.0",
    "webpack-dev-middleware": "^4.1.0",
    "webpack-merge": "^5.7.3"
  },
  "scripts": {
    "build:client": "webpack -c ./webpack.client.config.js",
    "build:server": "webpack -c ./webpack.server.config.js",
    "lint:js": "eslint \"src/**/*.{js,vue}\"",
    "lint:css": "stylelint \"**/*.css\"",
    "start": "nodemon --exec babel-node src/server/app.js --watch src/server --env=dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn run lint-staged"
    }
  },
  "lint-staged": {
    "*.css": "stylelint --fix",
    "*.js": "eslint --fix"
  }
}
